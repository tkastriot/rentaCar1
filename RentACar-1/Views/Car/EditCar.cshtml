@model RentACar_1.ViewModels.EditCarViewModel

<style>
	.navbar .container {
		flex-wrap: nowrap !important;
	}

	.nav.navbar.bootsnav {
		background: black !important;
	}

	.page-container {
		width: 100% !important;
		padding: 0 !important;
		margin: auto !important;
		margin-top: 100px !important
	}

	.wrap-sticky nav.navbar.bootsnav {
		background-color: #000 !important;
		box-shadow: 0 2px 5px rgba(0,0,0,.2) !important
	}
</style>
<div class="content">
	<div class="container">
		<h1>Edit Car</h1>
		<div class="row align-items-stretch no-gutters contact-wrap">
			<div class="col-md-12">
				<div class="form h-100">
					<form asp-action="EditCar" method="post" class="mb-5" asp-route-id="@Model.CarId">
						<input type="hidden" asp-for="CarId" />

						<div class="row">
							<div class="col-md-6 form-group mb-3">
								<label for="name" class="col-form-label">Brand *</label>
								<input asp-for="Brand" class="form-control" id="name" />
								<span asp-validation-for="Brand" class="text-danger"></span>
							</div>
							<div class="col-md-6 form-group mb-3">
								<label for="email" class="col-form-label">Category *</label>
								<input asp-for="Category" class="form-control" id="email" />
								<span asp-validation-for="Category" class="text-danger"></span>
							</div>
						</div>

						<div class="row">
							<div class="col-md-6 form-group mb-3">
								<label for="year" class="col-form-label">Year *</label>
								<input asp-for="Year" class="form-control" id="year" />
								<span asp-validation-for="Year" class="text-danger"></span>
							</div>
							<div class="col-md-6 form-group mb-3">
								<label for="description" class="col-form-label">Description *</label>
								<textarea asp-for="Description" class="form-control" id="description" rows="4"></textarea>
								<span asp-validation-for="Description" class="text-danger"></span>
							</div>
						</div>

						<div class="row">
							<div class="col-md-6 form-group mb-3">
								<label for="automatic" class="col-form-label">Is Automatic</label>
								<div>
									<label class="radio-inline">
										<input type="radio" asp-for="IsAutomatic" value="true" /> Yes
									</label>
									<label class="radio-inline">
										<input type="radio" asp-for="IsAutomatic" value="false" /> No
									</label>
								</div>
								<span asp-validation-for="IsAutomatic" class="text-danger"></span>
							</div>
							<div class="col-md-6 form-group mb-3">
								<label for="fuelType" class="col-form-label">Fuel Type</label>
								<input asp-for="FuelType" class="form-control" id="fuelType" />
								<span asp-validation-for="FuelType" class="text-danger"></span>
							</div>
						</div>

						<div class="row">
							<div class="col-md-6 form-group mb-3">
								<label for="power" class="col-form-label">Power (KW)</label>
								<input asp-for="Power" class="form-control" id="power" />
								<span asp-validation-for="Power" class="text-danger"></span>
							</div>
							<div class="col-md-6 form-group mb-3">
								<label for="city" class="col-form-label">City</label>
								<input asp-for="City" class="form-control" id="city" />
								<span asp-validation-for="City" class="text-danger"></span>
							</div>
						</div>

						<div class="row">
							<div class="col-md-6 form-group mb-3">
								<label for="registrationNumber" class="col-form-label">Registration Number</label>
								<input asp-for="RegistrationNumber" class="form-control" id="registrationNumber" />
								<span asp-validation-for="RegistrationNumber" class="text-danger"></span>
							</div>
							<div class="col-md-6 form-group mb-3">
								<label for="pricePerDay" class="col-form-label">Price Per Day</label>
								<input asp-for="PricePerDay" class="form-control" id="pricePerDay" />
								<span asp-validation-for="PricePerDay" class="text-danger"></span>
							</div>
						</div>

						<div class="row">
							<div class="col-md-6 form-group mb-3">
								<label for="registrationNumber" class="col-form-label">Image Url</label>
								<input asp-for="ImageUrl" class="form-control" id="imageUrl" />
								<span asp-validation-for="ImageUrl" class="text-danger"></span>
							</div>
						</div>

						<div class="row">
							<div class="col-md-12 form-group">
								<button type="submit" class="btn btn-primary rounded-0 py-2 px-4">Save</button>
								<span class="submitting"></span>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
